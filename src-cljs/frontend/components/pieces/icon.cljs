(dc/do
  (defcard-doc
    (ns-docstring))

  (defn icon-card
    "Given a collection of icon component function vars, creates a React element
    suitable for showing off those icons as a devcard."
    [icon-vars]
    (html
     [:div
      (for [icon icon-vars]
        [:div {:style {:margin-bottom "30px"}}
         [:div {:style {:font-size "24px"
                        :display "flex"
                        :align-items "center"
                        :margin-bottom "5px"}}
          [:div {:style {:width "1em"
                         :margin-right "10px"}}
           (icon)]
          (-> icon meta :name name)]
         [:div (-> icon meta :doc)]])]))

  (defcard actions
    (icon-card [#'cancel-circle]))

  (defcard brand
    (icon-card [#'github
                #'bitbucket]))

  (defcard domain
    (icon-card [#'project
                #'team
                #'key]))

  (defcard navigation
    (icon-card [#'settings])))
