%html
  %head
    %title Circle - Continuous Integration made easy

    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %meta{:content => "Continuous Integration made easy", :name => "description"}
    %meta{:content => "Circle, heroku, continuous integration, continuous deployment, CI, github", :name => "keywords"}
    %meta{:content => "rCckS33lTuN6tiIrxLMykv_uRR0dMoHNM4XrR4yYUQ0", :name => "google-site-verification"}

    -# Beware, the ordering matters here!!    
    = stylesheet_link_tag    "reset"
    = stylesheet_link_tag    "core"
    = stylesheet_link_tag    "colors_blue_and_green"
    = stylesheet_link_tag    "additional"
    = stylesheet_link_tag    "wufoo"
    /[if lte IE 8]
      = stylesheet_link_tag  "ie"
    /[if lte IE 10]
      %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans", :media => "screen", :rel => "stylesheet", :type => "text/css"}

    = javascript_include_tag "application"

    = csrf_meta_tags

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-25580673-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();


  %body
    = yield
