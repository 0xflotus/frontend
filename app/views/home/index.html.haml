%html
  %head
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-25580673-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();    %meta{:content => "rCckS33lTuN6tiIrxLMykv_uRR0dMoHNM4XrR4yYUQ0", :name => "google-site-verification"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "Continuous Integration made easy", :name => "description"}/
    %meta{:content => "Circle, heroku, continuous integration, continuous deployment, CI, github", :name => "keywords"}/
    %link{:href => "/css/reset.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/css/core.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/css/colors_blue_and_green.css", :media => "screen", :rel => "stylesheet", :title => "Blue and green", :type => "text/css"}/
    %link{:href => "/css/additional.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/css/wufoo.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    /[if lte IE 8]
      <link href="css/ie.css" rel="stylesheet" type="text/css" media="screen" />
    /[if lte IE 10]
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "/js/jquery_minimized_core.js", :type => "text/javascript"}
    %script{:src => "/js/wufoo.js", :type => "text/javascript"}
    %title Circle - Continuous Integration made easy
  %body
    #notthefooter
      #header_wrap
        #header
          %h1#logo
            %a{:href => "/", :title => "Go to Circle homepage"}
              %img#circle{:src => "/img/circle-transparent.png"}/
              %img#circle-word{:src => "/img/circle-word.png"}/
          %ul#nav
            %li
              %a.current_page{:href => "/"} Signup
            %li
              %a{:href => "/login"} Login
          .clear
      #pitch_wrap
        #pitch
          #left-panel.vcenter1
            .vcenter2
              .vcenter3
                %h1#cititle
                  Continuous Integration
                  %br>/
                  made easy
          #right-panel.vcenter1
            .vcenter2
              .vcenter3
                .move-right
                  .blue-box
                    %h2.takepart Sign up for the beta
                    %p.whenready We'll email you when we're ready.
                    %form{:action => "/", :method => "POST", :onsubmit => "if (this.email.value == &quot;Email address&quot;) { this.email.style.background = 'red'; return false; }"}
                      %fieldset#actualform
                        %ul
                          %li
                            %input#email{:name => "email", :onblur => "if (this.value == '') { this.value = 'Email address'};", :onfocus => "this.style.background = 'white'; if (this.value == 'Email address') { this.value=''};", :type => "text", :value => "Email address"}/
                          %li
                            %input#contact{:checked => "checked", :name => "contact", :type => "checkbox", :value => "true"}/
                          %li
                            %div
                              %div
                                %label#contact-label{:for => "contact"} May we contact you to ask about your platform, stack, test suite, etc?
                      %fieldset
                        %input.call_to_action{:type => "submit", :value => "Get Notified"}/
          .clear
      #content_wrap
        #content
          #main_content_wide.left
            .box_medium.feature.separator_r
              %img{:height => "55", :src => "img/icon_feature_04.png", :width => "60"}/
              %h3 Minimal configuration
              %p In most cases, we'll just need access to your repo.
            .box_medium.feature
              %img{:height => "55", :src => "img/icon_feature_01.png", :width => "60"}/
              %h3 Go home early
              %p Push to a branch, and we'll automatically merge once the tests pass.
            .box_medium.feature.separator_r
              %img{:height => "55", :src => "img/icon_feature_02.png", :width => "60"}/
              %h3 Lightning fast tests
              %p Find out as soon as something breaks, using automatic parallelization, dependency analysis and test prioritization.
            .box_medium.feature
              %img{:height => "55", :src => "img/icon_feature_03.png", :width => "60"}/
              %h3 Continuous deployment
              %p Deploy your web app to prodution automatically once tests pass. Revert automatically based on your analytics data.
      .clear
      #notthefooterclear
    #footer_wrap
      #footer
        .box_wide.separator_r
          %p#copyright Copyright &copy; 2011 Circle
        #social_info.box_small.separator_r
          %ul
            %li#twitter
              %a{:href => "http://twitter.com/circleci"} follow @circleci
        #contact_info.box_small
          %h5/
          %ul
            %li questions@circleci.com
        .clear
