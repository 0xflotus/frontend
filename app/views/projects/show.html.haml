.topbar
  .topbar-inner
    .container-fluid
      %a.brand{:href => '#'}
        Circle

      %ul.nav
        %li.active
          %a{:href => '#'}
            = @project.name
      %p.pull-right
        = current_user.email



%ul
  %li
    = @project["vcs-url"]

#recent-jobs
  = render @project.jobs.order_by([[:_id, :desc]]).limit 10

= form_for [@project, Job.new], :remote => true do |f|
  = f.submit "Trigger job"

