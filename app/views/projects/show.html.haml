.topbar
  .topbar-inner
    .container-fluid
      %a.brand{:href => '#'}
        Circle

      %ul.nav
        %li.active
          %a{:href => '#'}
            = @project.name
      %p.pull-right
        = current_user.email

.container
  .content
    %h4
      = @project.name
    %h6
      = @project["vcs-url"]

    = render :partial => 'running'
    = render :partial => 'running'

    %table#recent-jobs
      %thead
        %tr
          %th
            Revision
          %th
            Author
          %th
            Success?
          %th
            \% complete

      = render @project.jobs.order_by([[:_id, :desc]]).limit(10), :partial => 'job'

