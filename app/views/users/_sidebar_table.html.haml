- projects = @projects.find_all { |p| p.status == filter }
- if projects.length > 0
  %table.condensed-table.well
    %thead
      %tr
        %th
          #{title} Projects
    %tbody
      - projects.each do |p|
        %tr
          %td
            = project_link_to p

          %td.build_column
            - b = p.latest_build
            - if b
              != bootstrap_status b, build_link_to(b)

          %td.icons
            = link_to 'edit', github_project_edit_path(p)