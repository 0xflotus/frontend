.container-fluid
  .sidebar
    %table.condensed-table
      %tbody
      - @projects.each do |p|
        %tr
          %td
            = project_link_to p
          %td.icons
            [
            = link_to p.users.count, "#", :title => p.users.map { |u| u.known_email }.join("|")
            = link_to 'e', github_project_edit_path(p)
            = link_to 't', url_for([p, Build.new]), { :remote => true, :method => :post }
            = build_link_to p.latest_build
            - if p.visible
              V
            - else
              \-
            ]

  .content

    %table
      %thead
        %tr
          %th Build
          %th Revision
          %th Author
          %th Log
          %th Started at
          %th Length
          %th Status

      %tbody
        - @builds.each do |build|
          %tr
            %td
              = build_link_to build, true
            %td
              = revision_link_to build
            %td
              = build.author_name || build.author_email
            %td
              = log_link_to(build.subject, build.body, 50)
            %td
              = as_commit_time build.start_time
            %td
              = as_length_of_build build.start_time, build.stop_time
            %td
              != bootstrap_status(build)
    = paginate @builds
