.container-fluid
  .sidebar
    %table.condensed-table.well
      %tbody
        - @users.each do |u|
          %tr
            %td
              = u.email
              %table
                %tbody
                  - u.projects.each do |p|

                    %tr
                      %td
                        = project_link_to p

                      %td.build_column
                        - build = p.latest_build
                        - if build
                          = bootstrap_build_num build

                      %td.icons
                        = link_to 'e', github_project_edit_path(p)
                        = link_to 't', url_for([p, Build.new]), { :remote => true, :method => :post }
                        - if p.visible
                          V

  .content
    .row
      .offset1
        = render :partial => 'shared/builds',
                 :locals => { :mention_project => true, :pagination => true }
