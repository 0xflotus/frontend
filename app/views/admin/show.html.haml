.container-fluid
  .sidebar
    %table.condensed-table.well
      %tbody
        - @projects.each do |p|
          %tr
            %td
              = project_link_to p
            %td.icons
              [
              = link_to p.users.count, "#", :title => p.users.map { |u| u.known_email }.join("|")
              = link_to 'e', github_project_edit_path(p)
              = link_to 't', url_for([p, Build.new]), { :remote => true, :method => :post }
              = build_link_to p.latest_build
              - if p.visible
                V
              - else
                \-
              ]

  .content
    .row
      .offset1
        = render :partial => 'shared/builds',
                 :locals => { :mention_project => true, :pagination => true }
