%td{colspan: 2}

    %a.btn.btn-primary{data-bind: "click: invite_user",
                       data-loading-text: "Sending",
                       data-success-text: "Sent",
                       data-failed-text: "Failed to send"}
      Invite
      %span{data-bind: "text: user.login"}
  / ko if: dont_build() == 'no-user' && !user.is_user
  / /ko

    %a.btn.btn-primary.disabled
      %span{data-bind: "text: user.login"}
      has joined
  / ko if: dont_build() == 'no-user' && user.is_user
  / /ko

  / ko if: dont_build() == 'bad-push'
  %span Unverified push - ignored
  / /ko
