.side-actions
  %a#add-projects{href: "/add-projects"}
    %i.icon-plus
    %span Projects
  %a#invite{href: "#", data-toggle: "modal", data-target: "#inviteForm"}
    %i.icon-plus
    %span Collaborator
  %div{data-bind: "if: show_follow_project_button"}
    %button#follow-project-button{href: "#", data-bind: "click: project().follow"}
      %i.icon-plus
      %span Follow
      %span{data-bind: "text: project().project_name"}
%span{data-bind: "ifnot: projects_have_been_loaded"}
  = HAML['fast_spinner']()
